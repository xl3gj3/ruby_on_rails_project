        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "Style", style_path ,{:class => 'nav-link'}%>
          </li>
          <li class="nav-item">
            <%= link_to "Board Type", type_path ,{:class => 'nav-link'}%>
          </li>
          <li class="nav-item">
            <%= link_to "Blog", blog_path ,{:class => 'nav-link'}%>
          </li>
          <li class="nav-item">
            <%= link_to "Share experience", create_path ,{:class => 'nav-link'}%>
          </li>
        </ul>
      </div>
    </nav>


    <!-- <div class = "container custom_container"> -->
      <%= yield %>
